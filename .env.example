# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url  # e.g., https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key  # Find this in your Supabase project settings

# Groq API Key (Required for AI features)
GROQ_API_KEY=your_groq_api_key_here  # Get from https://console.groq.com/

# Flask Configuration
FLASK_ENV=development
PORT=5000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://yourdomain.com

# Security
SECRET_KEY=your_secret_key_here  # Generate a strong secret key

# Email Configuration (if needed)
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com
